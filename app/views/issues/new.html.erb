<%= render "shared/page_title", title: "Report an Issue" %>
<%= render "shared/errors", obj: @issue %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@issue, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :title %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Issue Title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :body %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Describe the issue" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :submitted_by %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :submitted_by, rows: 10, class: "form-control", placeholder: "Enter your name" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to homepage", root_path %> ]
    </div>
  </div>
</div>
